<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background">

        <ImageButton
            android:id="@+id/setBackgroundPaintBucket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_paint_black_24dp" />

        <ImageButton
            android:id="@+id/setPainBrushTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_brush_black_24dp" />

        <ImageButton
            android:id="@+id/strokeWidthPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1_black_24dp" />

        <ImageButton
            android:id="@+id/strokeWidthMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_neg_1_black_24dp" />

        <ImageButton
            android:id="@+id/undoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_undo_black_24dp" />

        <ImageButton
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_sweep_black_24dp" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/changeColorRedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorRed"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorOrangeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorOrange"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorYellowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorYellow"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorGreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorGreen"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorBlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorBlue"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorIndigoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorIndigo"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorVioletButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorViolet"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorWhiteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorWhite"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorGreyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorGrey"
            android:padding="1dp" />

        <Button
            android:id="@+id/changeColorBlackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight=".1"
            android:backgroundTint="@color/colorBlack"
            android:padding="1dp" />

    </LinearLayout>

    <me.panavtec.drawableview.DrawableView
        android:id="@+id/paintView"
        android:layout_width="1024px"
        android:layout_height="1024px"
        android:layout_gravity="top|center"
        android:layout_margin="8dp" />

</LinearLayout>
